@model IEnumerable<HotelDeBotel.Domain.Booking>


<h2>Boekingen</h2>

<table class="table">
    <tr>
        <th> Gasten </th>
        <th> Datum</th>
        <th> Kamer </th>
        <th> </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @foreach (var guest in item.Guests)
            {
                @guest.Name 
                <br/>
            }

        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Room.Name)
        </td>
        <td>
            @Html.ActionLink("Bekijk details", "Details", new {id = item.Id}, new { @class = "btn btn-dark"}) 
            @Html.ActionLink("Verwijder boeking", "Delete", new {id = item.Id}, new {@class = "btn btn-dark"})
        </td>
    </tr>
}

</table>

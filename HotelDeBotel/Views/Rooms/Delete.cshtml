@model HotelDeBotel.Domain.Room


<h2>Verwijderen</h2>

<h5>Weet u zeker dat u deze kamer wil verwijderen?</h5>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Naam
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            Grootte
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Size)
        </dd>

        <dt>
            Prijs
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>

        <dt>
            Afbeelding
        </dt>

        <dd>
            <img src="@Model.Image" alt="Alternate Text" />
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Verwijderen" class="btn btn-dark" /> 
            @Html.ActionLink("Terug naar overzicht", "Index" ,null, new {@class = "btn btn-light"})
        </div>
    }
</div>
